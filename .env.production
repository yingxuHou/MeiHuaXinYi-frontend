# 生产环境配置

# 应用标题
VITE_APP_TITLE=梅花心易

# API基础URL - 生产环境需要替换为实际的后端API地址
VITE_API_BASE_URL=https://meihua-api.zeabur.app/api

# 应用版本
VITE_APP_VERSION=1.0.0

# 生产模式
VITE_DEV_MODE=false

# 禁用模拟数据
VITE_ENABLE_MOCK=false

# 禁用调试模式
VITE_DEBUG=false

# 启用性能监控
VITE_ENABLE_PERFORMANCE=true

# 上传文件大小限制（MB）
VITE_UPLOAD_SIZE_LIMIT=10

# 分页默认大小
VITE_PAGE_SIZE=10

# Token过期时间（小时）
VITE_TOKEN_EXPIRE_HOURS=24

# 刷新Token过期时间（天）
VITE_REFRESH_TOKEN_EXPIRE_DAYS=7

# 启用PWA
VITE_ENABLE_PWA=true

# 启用服务工作者
VITE_ENABLE_SERVICE_WORKER=true

# 分析工具配置 - 生产环境需要配置实际的分析ID
VITE_ENABLE_ANALYTICS=true
VITE_ANALYTICS_ID=G-XXXXXXXXXX

# 错误监控配置 - 生产环境需要配置实际的监控DSN
VITE_ENABLE_ERROR_TRACKING=true
VITE_ERROR_TRACKING_DSN=https://xxxxxxxx@sentry.io/xxxxxxx

# 第三方服务配置 - 生产环境需要配置实际的APP ID
VITE_WECHAT_APP_ID=wx1234567890abcdef
VITE_ALIPAY_APP_ID=2021001234567890

# CDN配置 - 生产环境建议使用CDN
VITE_CDN_URL=https://cdn.meihuaxinyi.com

# 静态资源URL
VITE_STATIC_URL=https://static.meihuaxinyi.com

# WebSocket URL - 生产环境需要替换为实际的WebSocket地址
VITE_WS_URL=wss://ws.meihuaxinyi.com

# 地图服务配置 - 需要申请实际的地图服务密钥
VITE_MAP_KEY=your_map_service_key

# 推送服务配置 - 需要配置实际的推送服务密钥
VITE_PUSH_PUBLIC_KEY=your_push_public_key
